{{#if err}}
    <h2>Oops, picture was not found...</h2>
    <a href="/">Return home</a>
{{else}}
    <h2>{{pic.name}}</h2>
    <h4>Author: {{pic.author}}</h4>
    <h4 id="votes">Votes: {{pic.votes}}</h4>
    <h4>Tags: {{#each pic.tags}}{{this}}{{#unless @last}},{{/unless}} {{/each}}</h4>

    <button id="upvote" class="waves-effect waves-light btn red lighten-3"><i class="material-icons left">arrow_upward</i>Upvote</button>

    <button id="showform" type="button" class="btn btn-warning" name="">Edit Tags!</button>
    <form id="edittags" class="form-horizontal hidden" action="" method="post">
        <input type="text" class="hidden" name="tags" value="{{#each pic.tags}}{{this}} {{/each}}"placeholder="Add tags!">
        <button type="submit" class="hidden btn btn-success" name=""> Submit tags!</button>
    </form>
    <img class="materialboxed" width="650" data-caption="Tags: {{#each pic.tags}}{{this}}{{#unless @last}},{{/unless}} {{/each}}" src="/{{pic.name}}" alt="picture">
    <script type="text/javascript" src="/javascripts/picture.js"></script>
{{/if}}
